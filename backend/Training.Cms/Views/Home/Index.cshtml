@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container">
    <h1 class="text-center mb-4">Chào mừng đến với hệ thống</h1>
    
    <div class="row justify-content-center">
        <div class="col-md-4" style="margin-top: 50px;">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">
                        <i class="fas fa-users me-2"></i>Quản lý người dùng
                    </h5>
                    <p class="card-text">
                        <i class="fas fa-info-circle me-2"></i>
                        Xem và quản lý danh sách người dùng trong hệ thống một cách dễ dàng.
                    </p>
                    <a href="/User" class="btn btn-outline-primary btn-lg w-100">
                        <i class="fas fa-list me-2"></i>Xem danh sách
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4" style="margin-top: 50px;">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">
                        <i class="fas fa-tags me-2"></i>Quản lý danh mục
                    </h5>
                    <p class="card-text">
                        <i class="fas fa-info-circle me-2"></i>
                        Xem và quản lý các danh mục sản phẩm trong hệ thống.
                    </p>
                    <a href="/Category" class="btn btn-outline-primary btn-lg w-100">
                        <i class="fas fa-list me-2"></i>Xem danh sách
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4" style="margin-top: 50px;">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">
                        <i class="fas fa-chart-bar me-2"></i>Báo cáo
                    </h5>
                    <p class="card-text">
                        <i class="fas fa-info-circle me-2"></i>
                        Xem báo cáo thống kê doanh thu và đơn hàng trong hệ thống.
                    </p>
                    <a href="/Report" class="btn btn-outline-primary btn-lg w-100">
                        <i class="fas fa-chart-line me-2"></i>Xem báo cáo
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
