@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    ViewBag.isSuccess = Context.Request.Query["isSuccess"].ToString();
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="mb-0">Chỉnh sửa người dùng</h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.isSuccess == "true")
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>Thành công!</strong> Thông tin người dùng đã được cập nhật.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        <div class="text-center mt-4">
                            <a href="/Home/UserEdit/@ViewBag.Id" class="btn btn-primary btn-lg px-4">
                                <i class="fas fa-edit me-2"></i>Tiếp tục chỉnh sửa
                            </a>
                            <a href="/Home/User" class="btn btn-secondary btn-lg px-4 ms-3">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                            </a>
                        </div>
                    } 
                    else 
                    {
                        <form method="post" action="/User/UserEdit/@ViewBag.Id?Queryable=true" class="needs-validation" novalidate>
                            <div class="mb-4">
                                <label for="first_name" class="form-label fw-bold">Tên</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input type="text" class="form-control" id="FirstName" name="FirstName" value="@ViewBag.FirstName" required>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label for="last_name" class="form-label fw-bold">Họ</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input type="text" class="form-control" id="LastName" name="LastName" value="@ViewBag.LastName" required>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label for="email" class="form-label fw-bold">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input type="email" class="form-control" id="Email" name="Email" value="@ViewBag.Email" required>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label for="role" class="form-label fw-bold">Vai trò</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                    <select class="form-select" id="role" name="Role" required>
                                        @{
                                            var role = ViewBag.Role?.ToString();
                                        }
                                        <option value="1" selected="@(role == "Admin")">Admin</option>
                                        <option value="2" selected="@(role == "Clerk")">Clerk</option>
                                        <option value="3" selected="@(role == "Customer")">Customer</option>
                                    </select>
                                </div>
                            </div>
                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg px-5">
                                    <i class="fas fa-save me-2"></i>Lưu
                                </button>
                                <a href="/User" class="btn btn-secondary btn-lg px-5 ms-3">
                                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
